{
  "manifest_version": 3,
  "name": "Meet LoL-Style Ping Extension",
  "version": "1.0",
  "description": "Google Meetでゲームのようなピン機能を提供する拡張機能",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": [
        "firebase/firebase-app-compat.js",
        "firebase/firebase-auth-compat.js",
        "firebase/firebase-database-compat.js",
        "firebase-config.js",
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "217193969712-a8dn0vn1c2v6v8uu2oq5fhh7kp9g4lqb.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email", "https://www.googleapis.com/auth/userinfo.profile"]
  },
  "host_permissions": [
    "*://meet.google.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
